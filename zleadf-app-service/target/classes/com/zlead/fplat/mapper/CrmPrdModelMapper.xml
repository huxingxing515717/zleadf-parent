    <select id="findExistsGoodsByAgentAndListId" resultMap="BaseResultMap">
        SELECT *,(select concat(group_concat(m.model_id separator ','))) as modelIds FROM crm_prd_model m
        WHERE m.`model_id` IN
          (SELECT DISTINCT
            a.`model_id`
          FROM
            t_goods a,
            t_goods_level gd
          WHERE a.id = gd.goods_id
            AND gd.level_id IN
            (SELECT
              level_id
            FROM
              t_agent_fac
            WHERE agent_id = #{agentId}
              AND `status` = 1)
            AND a.is_market = 1
            AND a.terminal IN (2, 3)
            AND a.shop_id IN
            (SELECT
              shop_id
            FROM
              oa_factory_info
            WHERE fact_state = 1
        <if test="facIds != null and facIds.size>0">
            AND fact_id IN
            <foreach collection="facIds" item="facId" open="(" close=")" separator=",">
                #{facId}
            </foreach>
        </if>
        ))
        <if test="list!=null and list.size>0">
           AND m.`list_id` IN
            <foreach collection="list" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </if>
        group by m.model_name
    </select>

    <select id="findByName" resultType="java.util.HashMap">
        SELECT t.`model_id` as id,t.`model_name` as name FROM crm_prd_model t
        WHERE t.`model_name` = #{modelName}
        AND t.`shop_id` IN
        (SELECT
        af.`sys_id`
        FROM
        t_agent_fac af
        WHERE af.`status` = 1
        <if test="factoryId != null">
            AND af.`factory_id` = #{factoryId}
        </if>
        <if test="agentId != null">
            AND af.`agent_id` = #{agentId}
        </if>
        )
    </select>

    <select id="findNameByIds" resultType="java.util.HashMap">
        SELECT distinct t.`model_id` as id,t.`model_name` as name FROM crm_prd_model t
        LEFT JOIN t_agent_fac f ON f.`sys_id`=t.`shop_id`
        AND f.`status` = 1
        AND f.`coop_state` = 1
        AND f.`agent_id` = #{agentId}
        <if test="ids!=null and ids.size>0">
            WHERE t.model_id IN
            <foreach collection="ids" item="id" open="(" close=")" separator=",">
                #{id}
            </foreach>
        </if>
        ORDER BY f.`create_time` ASC,t.`band_id` ASC,t.`list_id` ASC,t.`model_id` ASC
    </select>
